@model WebApplication1.Models.Slide

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slide Details</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Image</label>
                        <div>
                            <img src="~/assets/images/website-images/@Model.Image" style="max-width:400px;" class="img-fluid" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" class="form-control" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="Subtitle">Sub Title</label>
                        <input asp-for="Subtitle" class="form-control" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" disabled></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order">Order</label>
                        <input asp-for="Order" class="form-control" disabled>
                    </div>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                  
                </form>
            </div>
        </div>
    </div>
</div>
