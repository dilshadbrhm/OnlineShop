@model List<WebApplication1.Models.Size>
@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sizes</h4>
                <p class="card-description">
                    Add class <code>.table-striped</code>
                </p>
                <div class="table-responsive">

                    <a class="btn btn-success" asp-action="Create">Create Size</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Size size in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@size.Name</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Size" asp-action="Update" asp-route-id="@size.Id" class="btn btn-warning">
                                            <i class="mdi mdi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

