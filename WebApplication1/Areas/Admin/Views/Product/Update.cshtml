@model WebApplication1.ViewModels.Products.UpdateProductVM
@{
    ProductImage primary = @Model.ProductImages.FirstOrDefault(pi => pi.IsPrimary == true);
    ProductImage secondary = @Model.ProductImages.FirstOrDefault(pi => pi.IsPrimary == false);
}
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Slide</h4>

                <form asp-action="Create" class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <img style="width:150px;height:150px;" src="~/assets/images/website-images/@primary.Image" />
                        <br/>
                        <label asp-for="PrimaryPhoto">Primary Image</label>
                        <input asp-for="PrimaryPhoto" accept="image/*" type="file" class="form-control">
                        <span asp-validation-for="PrimaryPhoto" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <img style="width:150px;height:150px;" src="~/assets/images/website-images/@secondary.Image" />
                        <br/>
                        <label asp-for="SecondaryPhoto">Secondary Image</label>
                        <input asp-for="SecondaryPhoto" accept="image/*" type="file" class="form-control">
                        <span asp-validation-for="SecondaryPhoto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input asp-for="Price" type="text" class="form-control" placeholder="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SKU">SKU</label>
                        <input asp-for="SKU" type="text" class="form-control" placeholder="SKU">
                        <span asp-validation-for="SKU" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId">Category</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,nameof(Category.Id),nameof(Category.Name)))">
                        </select>


                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TagIds">Tags</label>
                        <select asp-for="TagIds" class="form-control" asp-items="@(new SelectList(Model.Tags,nameof(Tag.Id),nameof(Tag.Name)))">
                        </select>


                        <span asp-validation-for="TagIds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
