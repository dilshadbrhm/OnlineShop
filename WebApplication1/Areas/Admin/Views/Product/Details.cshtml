@model WebApplication1.ViewModels.Products.DetailsProductVM
@{
    WebApplication1.Models.ProductImage? primary = @Model.ProductImages?.FirstOrDefault(pi => pi.IsPrimary == true);
    WebApplication1.Models.ProductImage? secondary = @Model.ProductImages?.FirstOrDefault(pi => pi.IsPrimary == false);
}


<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product Details</h4>

                <form asp-action="Details" class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <img style="width:150px;height:150px;" src="~/assets/images/website-images/@primary?.Image" />
                        <br />
                        <label asp-for="PrimaryPhoto">Primary Image</label>
                        

                    </div>

                    <div class="form-group">
                        <img style="width:150px;height:150px;" src="~/assets/images/website-images/@secondary?.Image" />
                        <br />
                        <label asp-for="SecondaryPhoto">Secondary Photo</label>
                    
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Name" disabled>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input asp-for="Price" type="text" class="form-control" placeholder="Price" disabled>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SKU">SKU</label>
                        <input asp-for="SKU" type="text" class="form-control" placeholder="SKU" disabled>
                        <span asp-validation-for="SKU" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId">Category</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,nameof(WebApplication1.Models.Category.Id),nameof(WebApplication1.Models.Category.Name)))" disabled>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TagIds">Tags</label>
                        <select asp-for="TagIds" class="form-control" asp-items="@(new SelectList(Model.Tags,nameof(WebApplication1.Models.Tag.Id),nameof(WebApplication1.Models.Tag.Name)))" disabled>
                        </select>


                        <span asp-validation-for="TagIds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" disabled></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                   
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
