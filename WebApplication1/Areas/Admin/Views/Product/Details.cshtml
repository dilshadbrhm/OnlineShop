@model WebApplication1.ViewModels.Products.GetAdminProductVM

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product Details</h4>
                <p class="card-description"> @Model.Name 
                </p>

                <div class="row">
                    <div class="col-md-4">
                        <img src="~/assets/images/website-images/@Model.Image" class="img-fluid" alt="@Model.Name" />
                    </div>

                    <div class="col-md-8">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th style="width: 150px;">Name</th>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <th>Price</th>
                                    <td>@Model.Price</td>
                                </tr>
                                <tr>
                                    <th>Category</th>
                                    <td>@Model.CategoryName</td>
                                </tr>
                            </tbody>
                        </table>

                        <a asp-area="Admin"  asp-controller="Product" asp-action="Index" class="btn btn-light"> </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
